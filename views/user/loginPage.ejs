<%- include("../layout/userHeader.ejs") -%>

<section class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6 ">
            <img src="/assests/loginPage.png" alt="Login Image" class="img-fluid" width="900px">
        </div>
        <div class="col-md-6  mt-5 mt-md-0">
            <% if(typeof message !== 'undefined'){ %>
                <h5 class="text-warning"><%= message %></h5>
            <% } %>
            <form action="/" method="post">
                <br><br>
                  <div class="form-group col-md-8  mb-3 ms-5  mt-md-5 ">
                
                    <input type="email" name="email" class="form-control" placeholder="Enter email" required>
                    
                </div>
                <div class="form-group col-md-8  mb-3 ms-5">
                    <input type="password" name="password" class="form-control" placeholder="Password" required>
                </div>
                <div class="form-check ms-4">
                    <a href="/forgotPSWLink" class="text-decoration-none">Forgot Password?</a>
                </div>
                <button type="submit" class="btn text-white d-block mx-auto fw-bold   mt-3 px-5" style="background: #f35800;">Login</button>
              </form>
            <div class="text-center mt-3">
                <p>New to Luxicart? <a href="/register" class="text-decoration-none">Create an account</a></p>
            </div>
        </div>
    </div>
</section>

<script>
    function userhidemsg() {
        const msg = document.getElementById("invalidUser-msg");
        if (msg) {
            setTimeout(() => {
                msg.style.display = "none";
            }, 4000);
        }
    }
    window.onload = userhidemsg;
</script>


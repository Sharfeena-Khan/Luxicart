<main style="margin-top: 58px;">

  <div class="content ">
    <div class="row">
      <div class="container mb-5  " >
        <h4 class="fw-bold pt-2 ps-4">Edit Addresses</h4>

        <div class="pt-3 col-8" 
          style="border: 1px solid #f359006c; 
          box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.242); margin-bottom: 20px;">

<form action="/update-address" method="POST">
  <input type="hidden" value="<%= adrsData._id %>" name="id">
  <!-- Display address details -->
  <div class="form-group col-10  ms-5 d-flex gap-2 " style="padding-top:80px; ">
    <label for="name" class="form-label">Name:</label>
    <input type="text" name="name" class="form-control " value="<%= adrsData.name %>" required>
  </div>

  <div class="form-group col-10  ms-5 d-flex gap-2 pt-3 " style="padding-top:80px; ">
    <label for="name" class="form-label">House:</label>
    <input type="text" name="house" class="form-control " value="<%= adrsData.Adrs %>" required>
  </div>
  <div class="form-group col-10  ms-5 d-flex gap-2 pt-3 " style="padding-top:80px; ">
    <label for="name" class="form-label">Landmark:</label>
    <input type="text" name="Lmark" class="form-control " value="<%= adrsData.landmark %>" required>
  </div>

  <div class="form-group col-10  ms-5 d-flex gap-2 pt-3 " style="padding-top:80px; ">
    <label for="name" class="form-label">Street:</label>
    <input type="text" name="street" class="form-control " value="<%= adrsData.locality %>" required>
  </div>

  <div class="form-group col-10  ms-5 d-flex gap-2 pt-3 " style="padding-top:80px; ">
    <label for="name" class="form-label">City:</label>
    <input type="text" name="city" class="form-control " value="<%= adrsData.city %>" required>
  </div>

  <div class="form-group col-10  ms-5 d-flex gap-2 pt-3 " style="padding-top:80px; ">
    <label for="name" class="form-label">State:</label>
    <input type="text" name="state" class="form-control " value="<%= adrsData.state %>" required>
  </div>

  <div class="form-group col-10  ms-5 d-flex gap-2 pt-3 " style="padding-top:80px; ">
    <label for="name" class="form-label">Pincode:</label>
    <input type="text" name="zip" class="form-control " value="<%= adrsData.pincode %>" required>
  </div>

  <div class="form-group col-10  ms-5 d-flex gap-2 pt-3 " style="padding-top:80px; ">
    <label for="name" class="form-label">Mobile:</label>
    <input type="text" name="phn" class="form-control " value="<%= adrsData.phoneNum %>" required>
  </div>

  <div class="form-group col-10 ms-5 d-flex gap-2 pt-3" style="padding-top:80px;">
    <label for="name" class="form-label">Address Type :</label>
    
    <input class="form-check-input" type="radio" name="Radios" id="exampleRadios1" value="Home" <% if(adrsData.adrs_type === 'Home') { %> checked<% } %>>
    <label class="form-check-label" for="exampleRadios1">Home</label>

    <input class="form-check-input" type="radio" name="Radios" id="exampleRadios2" value="Work" <% if(adrsData.adrs_type === 'Work') { %> checked<% } %>> 
    <label class="form-check-label" for="exampleRadios2">Work</label>
</div>

  
  
  <!-- Add other address details fields similarly -->
   <div class="ms-auto me-5 mb-2 text-center mt-5">
    <button type="submit" class="btn text-white btn-b px-5 " style="background: #f35800;"><strong>Update</strong></button>
   </div>
 </form>


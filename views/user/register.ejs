<%-include("../layout/userHeader.ejs")-%>


<section class="mt-5 mb-5">
    <div class="col d-flex " style="padding-left: 150px"; >
        <div class="col-4  ms-5 ps-5" >
            <img class="ms-0 ps-0" src="/assests/registerPage-image.png" alt="" width="1050px">
        </div>
        
        <div class="col-8  ms-5    "  >
          <div class="ms-5">
            <%
                                    if(typeof message !== 'undefined'){
                                      %>
                                      <h5 class="text-warning ms-5 " id="invalidUser-msg"><%= message %></h5>
                                      <%
                                    }
                                    %>
          </div>
            <form action="/verify-otp" method="post" >

              <div class="form-group col-6  ms-5  " style="padding-top:150px; ">
                <input type="text" name="name" class="form-control" id="exampleInputName"  placeholder="Enter your name" required>
              </div>

              <div class="d-flex col-6 gap-3 mt-1">
                <div class="form-group  mb-3 ms-5  mt-3 " >
                  <input type="email" name="email" class="form-control " id="exampleInputEmail1" aria-describedby="emailHelp"  style="width: 226px;" placeholder="Enter your email" required>
                </div>
                <div class="form-group  mb-3  mt-3" >
                  <input type="tel" name="mobile" class="form-control " style="width: 226px;" id="exampleInputName" placeholder="Your Mobile number" required>
                </div>
              </div>
                
                <div class="form-group col-6 ms-5 mt-2">
                  <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
                </div>
                <div class="ms-5 ps-3" style="padding-top:50px;">
                    <small id="emailHelp" class="form-text text-muted ">By continuing, you agree to Luxicart's Terms of Use and Privacy Policy.</small>
                
                <div class="d-grid  col-6 mt-3 ">
                    <button type="submit" class="btn text-white btn-b  ms-0" style="background: #f35800;"><strong>Continue</strong></button>
               
                </div>

                </div>
                
              </form>
              <div class=" " style=" color:  #f35800;margin-top: 100px; margin-left: 200px;">
                Existing User?<a style="color: #f35800;"  href="/login"> <strong> Login here</strong></a>
              </div>

              
        </div>
    </div>
</section>

<script>
  function userhidemsg(){
const msg= document.getElementById("invalidUser-msg")
if(msg){
setTimeout(()=>{
msg.style.display = "none"
}, 4000)
}
}
window.onload= userhidemsg;
</script>


















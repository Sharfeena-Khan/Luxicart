                  <h6> <strong> General Information</strong></h6>
                  
                      
        <div class="mb-3">
          <label for="product-name"  class="form-label">Category  Name</label>
          <input type="text" class="form-control" id="productName" name="name"  placeholder="Type Category name here">
          
        </div>
        <div class="mb-5">
          <label for="discription" class="form-label">Discription</label>
          <textarea class="form-control" rows="5" name="discription" id="comment"></textarea>
        </div>
          </div>
        </form>
      
  
      </div>


          </div>
          
   
           
        
   
</section>


